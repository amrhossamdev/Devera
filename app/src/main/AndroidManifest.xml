<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devera.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Devera"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.profile.activities.EditProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera.NoActionBar" />
        <activity
            android:name=".ui.profile.activities.ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera.NoActionBar" />
        <activity
            android:name=".ui.groups.activites.GroupPostActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera.NoActionBar" />
        <activity
            android:name=".ui.home.activities.PostActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera.NoActionBar" />
        <activity
            android:name=".ui.register.activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera." />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Devera.NoActionBar" />

        <activity
            android:name=".ui.signIn.activities.SignInActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:exported="true"
            android:theme="@style/Theme.Devera.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>